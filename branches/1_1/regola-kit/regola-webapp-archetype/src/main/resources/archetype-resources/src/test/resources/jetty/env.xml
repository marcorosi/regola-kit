<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://jetty.mortbay.org/configure.dtd">
<Configure class="org.mortbay.jetty.webapp.WebAppContext">

  <New id="regola-kit-ds" class="org.mortbay.jetty.plus.naming.Resource">
	<Arg>jdbc/Datasource</Arg>
	<Arg>
		<New class="org.enhydra.jdbc.standard.StandardConnectionPoolDataSource">
			<Set name="Url">jdbc:mysql://localhost/${artifactId}</Set>
			<Set name="DriverName">com.mysql.jdbc.Driver</Set>
			<Set name="User">${artifactId}</Set>
			<Set name="Password">${artifactId}</Set>
		</New>
	</Arg>
  </New>
 
</Configure>
