<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
  
  	<persistence-context/>
  
	<var name="simpleModel" class="org.regola.model.SimpleModel" />
	<var name="formActions" class="org.regola.webapp.flow.FormActionsIceFaces" />
	<var name="errors" class="java.util.HashMap" />
	<!--<var name="effects" class="java.util.HashMap" />-->

	<input name="simpleModelId" required="false"/>
	

	
	<action-state id="newOrEdit">
    	<evaluate expression="simpleModelId eq null" />
    	<transition on="yes" to="form" />
    	<transition on="no" to="form" >
    	    <!-- evaluate expression="simpleModelManager.get(simpleModelId)" result="flowScope.simpleModel" /-->
			<evaluate expression="universalDao.get(simpleModel.class,simpleModelId)" result="flowScope.simpleModel" />
    	</transition>
	</action-state>
	
	<view-state id="form" >
		<transition on="cancelSimpleModel" to="cancel"/>
		<transition on="saveSimpleModel" to="saveOrUpdate">
			<evaluate expression="formActions.validate('SimpleModelFormAmendments.xml', simpleModel)" />
		</transition>		
	</view-state>
	
	<action-state id="saveOrUpdate">
		<evaluate expression="simpleModelId == null" />
    	<transition on="yes" to="confirm" >
    	    <!--evaluate expression="simpleModelManager.save(simpleModel)"  /-->
			<evaluate expression="universalDao.save(simpleModel)"  />
    	</transition>
    	<transition on="no" to="confirm" />
	</action-state>
	
	
	<end-state id="cancel" />
	<end-state id="confirm" commit="true" />
	
  	<bean-import resource="beans.xml"/>

</flow>