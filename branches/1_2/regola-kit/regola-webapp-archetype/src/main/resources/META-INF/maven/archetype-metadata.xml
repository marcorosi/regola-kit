        <include>applicationContext-dao-test.xml</include>
        <include>applicationContext-service-test.xml</include>
        <include>jetty/env.xml</include>
      </includes>
    </fileSet>
    
    <fileSet filtered="false" packaged="false">
      <directory></directory>
      <includes>
        <include>show_test_failure</include>
        <include>autodeploy.sh</include>
        <include>cruisecontrol.xml</include>
      </includes>
    </fileSet>
    
  </fileSets>
