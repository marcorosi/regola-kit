<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.regola.model"
	default-access="property">
	<class name="Item">
            <composite-id name="id" class="Item$ItemId">
                <key-property name="invoice" column="INVOICEID" />
                <key-property name="itemNumber" column="ITEM" />
            </composite-id>
            <many-to-one name="invoice" column="INVOICEID" insert="false" update="false" />
            <many-to-one name="product" column="PRODUCTID" />
            <property name="quantity" />
            <property name="cost" />
	</class>
</hibernate-mapping>
