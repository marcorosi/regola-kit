<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.regola</groupId>
  <artifactId>ide.eclipse</artifactId>
  <packaging>zip</packaging>
  <name>REGOLA Toolkit :: Eclipse IDE plugin module</name>
  <description>REGOLA Toolkit :: Eclipse IDE plugin module</description>
  <version>1.0-M1</version>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>pde-maven-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <eclipseInstall>/usr/local/nicola/eclipse-3.3.0</eclipseInstall>
        </configuration>
      </plugin>
    </plugins>
  </build>
  
   <dependencies>
        <dependency>
            <groupId>${groupId}</groupId>
            <artifactId>regola-codeassistence</artifactId>
            <version>1.0-M1</version>
        </dependency>
   </dependencies>
</project>