<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.regola.model"
	default-access="property">
	<class name="Customer">
		<id name="id" >
		<!-- non usare questo generatore in produzione -->
		<generator class="increment"></generator>
		</id>
		<property name="firstName" />
		<property name="lastName" />
		<component name="address" class="Customer$Address">
			<property name="street" />
			<property name="city" />
		</component>
		<!--  property name="age" / --> <!-- solo per prova conversione e validazione tipi numerici -->
		<!-- set name="invoices" inverse="true" -->
		<!-- set name="invoices" inverse="true" cascade="save-update" -->
      
		<set name="invoices" inverse="true" cascade="all">
			<key column="CUSTOMERID" />
			<one-to-many class="Invoice" />
		</set>
    
    
	</class>
</hibernate-mapping>